{
    "schema_in": {
        "name": "string",
        "spells": [
            {
                "power": "number",
                "name": "string"
            }
        ]
    },

    "pipeline_in": [
        {
            "@": "map",
            "=": {
                "sum_power": {
                    "@": "inject",
                    "[]": {
                        "@": "field",
                        "=": "spells"
                    },
                    "=": {
                        "@": "sum",
                        "=": {
                            "@": "field",
                            "=": "power"
                        }
                    }
                }
            }
        }
    ],




    "schema_out": {
        "sum_power": "number"
    },

    "pipeline_out": [
        {
            "$project": {
                "sum_power": {
                    "$reduce": {
                        "input": "$spells",
                        "initialValue": 0,
                        "in": {
                            "$add": ["$$value", "$$this.power"]
                        }
                    }
                }
            }
        }
    ]
}
