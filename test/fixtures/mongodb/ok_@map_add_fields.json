{
    "schema_in": {
        "power": "number",
        "bonus": "number"
    },
    "pipeline_in": [
        {
            "@": "map",
            "=": {
                "sum": {
                    "@": "add",
                    "=": [
                        { "@": "constant", "=": 14 },
                        { "@": "field", "=": "power" },
                        { "@": "field", "=": "bonus" }
                    ]
                }
            }
        }
    ],

    "schema_out": {
        "sum": "number"
    },
    "pipeline_out": [
        {
            "$project": {
                "sum": {
                    "$add": [14, "$power", "$bonus"]
                }
            }
        }
    ]
}
