{
    "schema_in": {
        "class": "string",
        "is_alive": "boolean",
        "age": "number",
        "spells": [{
            "power": "number",
            "name": "string"
        }]
    },

    "pipeline_in": [
        {
            "@": "map",
            "?": {
                "@": "eq",
                "=": [
                    {
                        "@": "field",
                        "=": "age"
                    },
                    {
                        "@": "constant",
                        "=": 14
                    }
                ]
            },
            "=": {
                "projected_age": {
                    "@": "field",
                    "=": "age"
                }
            }
        }
    ],



    "schema_out": {
        "projected_age": "number"
    },
    "pipeline_out": [
        {
            "$match": {
                "$eq": ["$age", 14]
            }
        },
        {
            "$project": {
                "projected_age": "$age"
            }
        }
    ]
}
