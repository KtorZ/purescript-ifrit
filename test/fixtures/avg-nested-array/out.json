[
    {
        "$project": {
            "avg_power": {
                "$divide": [
                    {
                        "$reduce": {
                            "input": "$spells",
                            "initialValue": 0,
                            "in": {
                                "$add": ["$$value", "$$this.power"]
                            }
                        }
                    },
                    {
                        "$size": "$spells"
                    }
                ]
            }
        }
    }
]
